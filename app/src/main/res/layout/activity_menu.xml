<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity">

    <TextView android:text="Silakan klik salah satu gambar di bawah:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPilihan"
        android:textSize="22sp"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewPilihan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/gridLayout" >

        <TextView
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:text="Mata Uang"
            android:id="@+id/textViewMataUang"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:text="Mata Dadu"
            android:id="@+id/textViewMataDadu"
            android:layout_row="0"
            android:layout_column="4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:adjustViewBounds="true"
            android:id="@+id/imageButtonMataUang"
            android:maxWidth="180dp"
            android:maxHeight="180dp"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/gambarangka1000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:adjustViewBounds="true"
            android:id="@+id/imageButtonMataDadu"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="4"
            android:src="@drawable/dadulengkap" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btnClose"
            android:layout_row="3"
            android:layout_column="4" />

    </GridLayout>


</RelativeLayout>
